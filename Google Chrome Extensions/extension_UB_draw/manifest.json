{
  "name": "Draw When You Want",
  "version": "0.1.1",
  "manifest_version": 2,
  "description": "Author: Alan(Mingcong) Zhang. \nUB mail: mingcong@buffalo.edu",
  "homepage_url": "http://www.acsu.buffalo.edu/~mingcong/",
  "icons": {
    "16": "icons/ed16.png",
    "48": "icons/ed48.png",
    "128": "icons/ed128.png"
  },
  "default_locale": "en",

  "browser_action": {
    "default_icon": "icons/ed19.png",
    "default_title": "Draw When You Want",
    "default_popup": "src/browser_action/browser_action.html"
  },

  "permissions": [
    "bookmarks",
    "chrome://favicon/",
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "contextMenus",
    "cookies",
    "fileBrowserHandler",
    "tts",
    "ttsEngine",
    "history",
    "idle",
    "management",
    "notifications",
    "tabs",
    "geolocation",
    "<all_urls>"
  ],
  
  "content_security_policy": "script-src 'self'; object-src 'self'"
}